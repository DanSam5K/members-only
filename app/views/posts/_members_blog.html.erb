<% @posts.each do |post| %>
  <div class="box">
  <article class="media">
  <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png">
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= post.member.name %></strong><br />
            <small>@<%= post.member.username %></small><br/>
            <small><%= post.created_at.strftime("Created: %m-%d-%Y at: %H:%M")%></small>
          <br>
              <%= post.title %><br>
              <%= post.body%>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
              <%= link_to post, style: 'text-decoration:none;', class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
              <%end%>
              <%= link_to edit_post_path(post), style: 'text-decoration:none;', class: "level-item" do%>
                <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
              <%end%>
              <%= link_to post, method: :delete, data: { confirm: 'Are you sure?'} do %>
              <span class="icon"><i class="fas fa-trash"></i></span>
              <%end%>
        </div>
        <div class="level-right">
              <small class="level-item"><%= post.updated_at.strftime("Updated: %m-%d-%Y at: %H:%M")%></small>
        <div>
      </nav>
    </div>
    <%= link_to post, method: :delete, data: { confirm: 'Are you sure?'} do %>
    <div class="media-right">
      <button class="delete"></button>
    </div>            
    <%end%>
    </article>
    </div>
    <%end%>