<% @posts.each do |post| %>
  <div class="box">
  <article class="media">
  <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png">
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
        <strong><%= current_member.name %></strong><br />
        <small><%= current_member.username %></small>
              <%= post.title %><br>
              <%= post.body%>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
              <%= link_to posts_path, style: 'text-decoration:none;', class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
              <% end %>
        </div>
        <div class="level-right">
              <small class="level-item"><%= post.updated_at.strftime("Updated: %m-%d-%Y at: %H:%M") %></small>
        <div>
      </nav>
    </div>
    <%= link_to new_post_path, method: :delete, data: { confirm: 'Are you sure?'} do %>
    <div class="media-right">
      <button class="delete"></button>
    </div>            
    <% end %>
    </article>
    </div>
    <%end %>