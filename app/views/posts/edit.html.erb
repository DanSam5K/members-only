<div class="section">
  <div class="container">
    <div class="columns is-centered mt-3">
      <div class="colum is-half">          
          <h1 class="title is-5">Members Posts</h1>
          <%= simple_form_for(@post) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
                <%= f.input :title, label: "Give your secret a title", input_html: { class: "input is-link "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweeet...", autofocus: true %>
                <%= f.input :body, label: "Write your secret!", input_html: { class: "textarea is-small"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweeet...", autofocus: true %>
            </div>
          </div>
          <%= f.button :submit, class: "button is-info" %>
          <%= link_to 'Back', posts_path,  style: 'text-decoration:none;', class: "button is-info" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

